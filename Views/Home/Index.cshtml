@{
    ViewData["Title"] = "FitTrack - Home";
}
<head>
    <link rel="stylesheet" href="~/css/style.css" />
</head>

<div class="container mt-4">
    <!-- Hero Section -->
    <div class="jumbotron text-center bg-primary text-white">
        <h1>Welcome to FitTrack</h1>
        <p>Your personal fitness tracker to stay on top of your goals!</p>
        <div class="jumbotron text-center bg-primary text-white st" style="margin: 50px;">
            <a href="/Account/Register" class="btn btn-light btn-lg"><small>Get Started</small></a>
            <a href="/Account/Login" class="btn btn-secondary btn-lg">Log In</a>
        </div>
    </div>

    <!-- Features Section -->
    <div class="row text-center mt-4 position-relative">
        <!-- Background Image -->
        <div class="col-md-12 p-0">
            <div class="overlay-container">
                <img src="~/images/watch-near-sports-equipment-grapefruit.jpg" alt="FitTrack" class="img-fluid w-100">
                <div class="overlay-content position-absolute top-50 start-50 translate-middle text-white">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <i class="fas fa-dumbbell fa-3x text-primary"></i>
                            <h3>Track Workouts</h3>
                            <p>Log and review your workouts to ensure consistent progress.</p>
                        </div>
                        <div class="col-md-4 mb-3">
                            <i class="fas fa-bullseye fa-3x text-success"></i>
                            <h3>Set Goals</h3>
                            <p>Define fitness goals and monitor your progress toward achieving them.</p>
                        </div>
                        <div class="col-md-4 mb-3">
                            <i class="fas fa-chart-line fa-3x text-warning"></i>
                            <h3>Analyze Progress</h3>
                            <p>Visualize your achievements and strive for continuous improvement.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
